      <% posts.forEach(function(post){ %>
        <div class="container box bg-white rounded-2xl shadow-xl hover:shadow-2xl transition-shadow duration-300 p-0 flex flex-col overflow-hidden border border-gray-100">
          <div class="flex items-center gap-4 px-6 pt-6 pb-2 bg-gradient-to-r from-sky-50 to-sky-100">
            <!-- User photo removed -->
            <div class="flex flex-col justify-center">
              <h4 class="text-lg font-bold text-gray-800 leading-tight">
                <%= post.user && post.user.user ? post.user.user : "Unknown User" %>
              </h4>
              <% if (post.createdAt) { %>
                <div class="text-xs text-gray-500 mt-1"><%= new Date(post.createdAt).toLocaleString() %></div>
              <% } %>
            </div>
          </div>
          <div class="relative bg-sky-50 flex flex-col items-center justify-center px-6 py-4">
            <% if (post.image) { %>
              <a href="/images/uploads/<%= post.image %>" target="_blank" title="View full image">
                <img data-postid="<%= post.id %>" class="rounded-xl postimg object-cover max-h-80 w-full border border-sky-200 shadow transition-transform duration-200 hover:scale-105 bg-white" src="/images/uploads/<%= post.image %>" alt="Post image">
              </a>
            <% } else { %>
              <div class="w-full h-48 flex items-center justify-center bg-gray-200 text-gray-400 italic rounded-xl">No image available</div>
            <% } %>
            <% if (post.imageText && post.imageText.trim().length > 0) { %>
              <div class="mt-4 w-full px-2">
                <span class="font-semibold text-gray-800">
                  <%= post.user && post.user.user ? post.user.user : "Unknown User" %>
                </span>
                <span class="text-gray-700 ml-2"><%= post.imageText %></span>
              </div>
            <% } %>
          </div>
        </div>
      <% }) %>
