<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>profile-page</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/profile.css" />
  </head>
  <body>
    <div class="containerpers">
      <div class="cardpers">
        <div class="profile-picture">
          <img src="/images/Lion2.jpg" alt="Profile Picture" />
        </div>
        <h2 class="name"><%= user.fullName %></h2>
        <h3 class="username">@<%= user.username %></h3>
        <p class="tagline">Lorem ipsum dolor sit amet.</p>
        <p class="description">
          Lorem ipsum dolor sit amet consectetur adipisicing.
        </p>
        <a href="/logout" class="button">Logout</a> 
        <span><a href="/feed" class="button">Feed</a></span>
        <br>
        <p></p>
        <form action="/upload" method="post" enctype="multipart/form-data">
          <input type="text" name="filecaption" placeholder="Enter Caption" />
          <input type="file" name="file" />
          <button type="submit">Upload</button>
        </form>
      </div>
    </div>

    <div class="container">
      <div class="cards flex">
        <% user.posts.forEach(function(post){ %>
          <div class="card" style="width: 18rem">
            <img src="/images/uploads/<%= post.image  %>" alt="..." />
            <div class="card-body">
              <h5 class="card-title"><%= post.imageText%></h5>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
